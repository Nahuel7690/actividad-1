<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
    const mensaje = prompt("escrbi el mensaje");

let signos = 0;
let letras = 0;

for(let i = 0; i< mensaje.lenght; i++){
if(mensaje[i] == '!'){
signos++;
}
else{
letras++;
}
}

document.write("sentencia: "+ mensaje + "<br>");
if(signos > letras){
document.write("ESGRITO");
}
else{
document.write("escrito");
}
}
</script>
</body>
</html>
